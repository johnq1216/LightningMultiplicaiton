<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parakeet.dev.lightningmultiplicaiton"
    android:versionCode="1"
    android:versionName="1.0"
     >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="6" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smily1"
        android:label="Multiplication Rush"
        android:theme="@style/AppTheme" 
      
       >
        <activity
            android:name="com.parakeet.dev.lightningmultiplicaiton.Splash"
            android:label="Multiplication Rush"  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.parakeet.dev.lightningmultiplicaiton.MainActivity"
            android:label="@string/app_name"   android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.GAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.parakeet.dev.lightningmultiplicaiton.FinalScore"
            android:label="@string/app_name"  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.FINALSCORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>


</manifest>
